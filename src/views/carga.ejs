<%- include('partials/header') %>

      <br>
      <!-- Titulo -->
      <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <h1>Carga de productos</h1>
        </div>
      </div>
      <br>
    <!-- Formulario -->
    <form action="/products/carga" method="POST" enctype="multipart/form-data"> 

        <!-- Nombre -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
                <label for="name" class="label-registro"> Nombre </label>
            </div>
            <div class="col-9 col-lg-3">
                <input type="text" name="name" id="name" class="form-control">
            </div>
        </div>
        <br>
        <!-- Categoria -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
                 <label for="category_id" class="label-registro"> Categoría </label>
            </div>
            <div class="col-9 col-lg-3">
                <select name="category_id" class="form-control">
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <br>
        <!-- Precio -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
                <label for="price" class="label-registro"> Precio </label>
            </div>
            <div class="col-9 col-lg-3">
                <input type="number" name="price" id="price" class="form-control">
            </div>
        </div>
        <br>
        <!-- Marca -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
                <label for="brand" class="label-registro"> Marca </label>
            </div>
            <div class="col-9 col-lg-3">
                <select name="brand_id" class="form-control">
                    <% brands.forEach(brand => { %>
                        <option value="<%= brand.id %>"><%= brand.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <br>
        <!-- Descripcion -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
                <label for="description" class="label-registro" id="description"> Descripción </label>
            </div>
            <div class="col-9 col-lg-3">
                <input type="textarea" name="description" class="form-control"></input>
            </div>
        </div>
        <br>
        <!-- Color -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
                <label for="color" class="label-registro"> Color </label>
            </div>
            <div class="col-9 col-lg-3">
                <select name="color" class="form-control" multiple>
                    <% colors.forEach(color => { %>
                        <option value="<%= color.id %>"><%= color.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <br>
        <!-- Imagen -->
        <div class="row">
            <div class="col-0 col-lg-3"></div>
            <div class="col-3 col-lg-2">
            <label for="image" class="label-registro">Imagen</label>
            </div>
            <div class="col-9 col-lg-5">
            <input type="file" class="form-control-file" name="image">
            </div>
          </div>
        <br>
        <!-- Boton -->
        <div class="row">
            <div class="col-12 col-lg-8 text-right">
                <button type="submit" class="btn btn-success"> Enviar </button >
            </div>
        </div>
    </form>
    </div>
    <br>


    
<%- include('partials/footer') %>